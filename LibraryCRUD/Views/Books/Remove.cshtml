@model LibraryCRUD.Models.Author_Book
@{
    ViewData["Title"] = "Retur Book";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Remove Author</h1>

<h3>Are you sure you want to remove this Author?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author.Name)
        </dd>
